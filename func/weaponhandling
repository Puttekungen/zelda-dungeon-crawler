def equip_weapon(player, new_weapon):
    if player.current_weapon:
        player.strength -= player.current_weapon.strength_bonus


    player.current_weapon = new_weapon
    player.strength += new_weapon.strength_bonus
    print(f"Equipped {new_weapon.name} (+{new_weapon.strength_bonus}str)")

def weapon_pickup(player, new_weapon):
    print(f"{player.name} found a new weapon")

    if player.current_weapon:
        choice = input(f"Do you want to replace your current weapon {player.current_weapon.name} +{player.current_weapon.strength}str with {new_weapon.name} +{new_weapon.strength_bonus}str? [Y/n]\n").lower()
        if choice == "y" or choice == "":
            equip_weapon(player, new_weapon)
        elif choice == "n":
            print(f"{player.name} threw away {new_weapon.name}")
        else:
            print("Invalid input")
    else:
        equip_weapon(player, new_weapon)